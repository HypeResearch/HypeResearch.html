<script>
    // Module Toggle Functionality
    function toggleModule(header) {
        const module = header.parentElement;
        const allModules = document.querySelectorAll('.module');
        
        allModules.forEach(m => {
            if (m !== module) {
                m.classList.remove('active');
            }
        });
        
        module.classList.toggle('active');
    }

    // Market Ticker Data
    const tickerData = [
        { symbol: 'BTC/USD', price: '64,234.50', change: '+3.24%', isUp: true },
        { symbol: 'ETH/USD', price: '3,128.75', change: '+2.18%', isUp: true },
        { symbol: 'SPY', price: '512.34', change: '+0.85%', isUp: true },
        { symbol: 'AAPL', price: '182.45', change: '-0.52%', isUp: false },
        { symbol: 'TSLA', price: '248.91', change: '+4.12%', isUp: true },
        { symbol: 'NVDA', price: '875.23', change: '+1.94%', isUp: true },
        { symbol: 'GOLD', price: '2,034.60', change: '+0.31%', isUp: true },
        { symbol: 'EUR/USD', price: '1.0842', change: '-0.15%', isUp: false },
    ];

    // Populate Market Ticker
    function populateTicker() {
        const ticker = document.getElementById('marketTicker');
        const tickerHTML = tickerData.map(item => `
            <div class="ticker-item">
                <span class="ticker-symbol">${item.symbol}</span>
                <span class="ticker-price">$${item.price}</span>
                <span class="ticker-change ${item.isUp ? 'ticker-up' : 'ticker-down'}">
                    ${item.change}
                </span>
            </div>
        `).join('');
        
        // Double the content for seamless loop
        ticker.innerHTML = tickerHTML + tickerHTML;
    }

    // Wave Chart
    function createWaveChart() {
        const ctx = document.getElementById('waveChart').getContext('2d');
        
        // Generate Elliott Wave-like data
        const generateWaveData = () => {
            const data = [];
            let price = 50000;
            const waves = [
                { amplitude: 5000, points: 15 }, // Wave 1
                { amplitude: -3000, points: 10 }, // Wave 2
                { amplitude: 8000, points: 20 }, // Wave 3
                { amplitude: -4000, points: 12 }, // Wave 4
                { amplitude: 6000, points: 18 }, // Wave 5
            ];
            
            waves.forEach(wave => {
                const step = wave.amplitude / wave.points;
                for (let i = 0; i < wave.points; i++) {
                    price += step + (Math.random() - 0.5) * 500;
                    data.push(price);
                }
            });
            
            return data;
        };

        const waveData = generateWaveData();
        const labels = waveData.map((_, i) => '');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Price',
                    data: waveData,
                    borderColor: '#00d9ff',
                    backgroundColor: 'rgba(0, 217, 255, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 0,
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: '#00d9ff',
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: 'rgba(20, 24, 36, 0.9)',
                        titleColor: '#00d9ff',
                        bodyColor: '#ffffff',
                        borderColor: '#00d9ff',
                        borderWidth: 1,
                        padding: 12,
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                return '$' + context.parsed.y.toFixed(2);
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        display: true,
                        grid: {
                            color: 'rgba(31, 41, 55, 0.5)',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#8892b0'
                        }
                    },
                    y: {
                        display: true,
                        grid: {
                            color: 'rgba(31, 41, 55, 0.5)',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#8892b0',
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                },
                interaction: {
                    mode: 'nearest',
                    axis: 'x',
                    intersect: false
                }
            }
        });
    }

    // Chart timeframe buttons
    document.querySelectorAll('.chart-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.chart-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            // In a real app, this would reload chart data for the selected timeframe
        });
    });

    // Smooth scroll for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Initialize on page load
    window.addEventListener('load', () => {
        populateTicker();
        createWaveChart();
    });
</script>
